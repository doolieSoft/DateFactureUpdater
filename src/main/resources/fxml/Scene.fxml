<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dooliesoft.MainPackage.FXMLDocumentController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleMenuClose" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane id="AnchorPane">
          <children>
            <SplitPane dividerPositions="0.41307371349095967" style="-fx-background-color: #4985c1;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <items>
                <AnchorPane>
                     <children>
                        <TextArea fx:id="listeFichiersATraiter" promptText="Entrer la liste des fichiers à copier" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                     </children>
                  </AnchorPane>
                <AnchorPane>
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <children>
                              <TextField fx:id="dossierDOrigine" promptText="Dossier contenant les fichiers">
                              </TextField>
                              <CheckBox fx:id="chekboxConserverCheminDOrigine" mnemonicParsing="false" onAction="#handleCheckBoxConserverCheminDOrigine" text="Conserver le dossier d'origine" />
                              <TextField fx:id="dossierDeSortie" promptText="Dossier de sortie" />
                              <HBox spacing="10.0">
                                 <children>
                                    <CheckBox fx:id="chekboxConserverDossierDeSortie" mnemonicParsing="false" onAction="#handleCheckBoxConserverDossierDeSortie" text="Conserver le dossier de sortie" />
                                    <Button fx:id="buttonOuvrirDossierDeSortie" mnemonicParsing="false" onAction="#handleButtonOuvrirDossierDeSortie" text="Ouvrir le dossier de sortie" />
                                 </children>
                              </HBox>
                              <TextField fx:id="nouvelleDateFacture" promptText="Nouvelle date de la facture" />
                              <CheckBox fx:id="chekboxNouvelleDateFacture" mnemonicParsing="false" onAction="#handleCheckBoxConserverNouvelleDateFacture" text="Conserver la date" />
                              <Button fx:id="buttonCopieDesFichiers" mnemonicParsing="false" onAction="#handleButtonCopieDesFichiers" text="Copier les fichiers à partir du dossier d'origine" />
                              <Button fx:id="buttonMiseAJourDatesFactures" mnemonicParsing="false" onAction="#handleButtonMiseAJourDatesFactures" text="Mettre à jour la date des factures" />
                              <Button fx:id="buttonEnregistrerParametre" mnemonicParsing="false" onAction="#handleButtonEnregistrerParametre" text="Enregistrer les paramètres" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
          </children>
      </AnchorPane>
   </children>
</VBox>
